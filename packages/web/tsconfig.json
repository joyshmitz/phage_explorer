{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@phage-explorer/core": ["../../packages/core/src"],
      "@phage-explorer/core/*": ["../../packages/core/src/*"],
      "@phage-explorer/db-schema": ["../../packages/db-schema/src"],
      "@phage-explorer/db-schema/*": ["../../packages/db-schema/src/*"],
      "@phage-explorer/db-runtime": ["../../packages/db-runtime/src"],
      "@phage-explorer/db-runtime/*": ["../../packages/db-runtime/src/*"],
      "@phage-explorer/state": ["../../packages/state/src"],
      "@phage-explorer/state/*": ["../../packages/state/src/*"],
      "@phage-explorer/renderer-3d": ["../../packages/renderer-3d/src"],
      "@phage-explorer/renderer-3d/*": ["../../packages/renderer-3d/src/*"],
      "@phage-explorer/data-pipeline": ["../../packages/data-pipeline/src"],
      "@phage-explorer/data-pipeline/*": ["../../packages/data-pipeline/src/*"],
      "@phage-explorer/comparison": ["../../packages/comparison/src"],
      "@phage-explorer/comparison/*": ["../../packages/comparison/src/*"],
      "@phage-explorer/tui": ["../../packages/tui/src"],
      "@phage-explorer/tui/*": ["../../packages/tui/src/*"],
      "@phage/wasm-compute": ["../../packages/wasm-compute/pkg/wasm_compute"],
      "@phage/wasm-compute/pkg/*": ["../../packages/wasm-compute/pkg/*"],
      "@phage-explorer/web/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./vite.config.ts",
    "./e2e/**/*.ts",
    "./playwright.config.ts",
    "./audit-ui.ts"
  ],
  "exclude": ["./node_modules", "./dist"]
}
