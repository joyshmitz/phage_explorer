{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@phage-explorer/core": ["packages/core/src"],
      "@phage-explorer/db-schema": ["packages/db-schema/src"],
      "@phage-explorer/db-runtime": ["packages/db-runtime/src"],
      "@phage-explorer/state": ["packages/state/src"],
      "@phage-explorer/renderer-3d": ["packages/renderer-3d/src"],
      "@phage-explorer/data-pipeline": ["packages/data-pipeline/src"],
      "@phage-explorer/tui": ["packages/tui/src"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist"
  ]
}
